@model HotelTamagotchi.Models.ViewModel.HotelBookingVM
@Styles.Render("~/Content/Site.css")
<div class="row">
    <div class="box">
        <h2>Hotel room - Edit</h2>
    </div>
    <div class="box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
     
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.HotelRoomId)

                <div class="form-group">
                    @Html.LabelFor(model => model.HotelRoomId, "Hotel room", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.HotelRoom.HotelRoomName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HotelRoom.RoomSize, "Hotel room size", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.HotelRoom.HotelRoomSize.RoomSize)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HotelRoom.HotelRoomType.RoomTypeCost, "Hotel room cost", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.HotelRoom.HotelRoomType.RoomTypeCost)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TamagotchisIds, "Tamagotchis", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ListBox("TamagotchisIds", null, htmlAttributes: new { @class = "tamagotchiSelect" })
                        @Html.ValidationMessageFor(model => model.TamagotchisIds, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <hr />
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>