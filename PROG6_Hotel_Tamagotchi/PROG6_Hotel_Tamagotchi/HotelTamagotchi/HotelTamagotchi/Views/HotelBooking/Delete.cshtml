@model HotelTamagotchi.Models.ViewModel.HotelBookingVM

<div class="row">
    <div class="box">
        <h2>Hotel booking - Delete</h2>
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="box">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.HotelRoom.HotelRoomName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HotelRoom.HotelRoomName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tamagotchis)
            </dt>

            <dd>
      
                    @foreach (var tamagotchi in Model.Tamagotchis)
                    {
                        <p>@tamagotchi.Name</p>
                    }
          
            </dd>

        </dl>
        <hr />

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>